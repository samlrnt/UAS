<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General">

        <SwitchPreference
            android:defaultValue="false"
            android:key="Notification"
            android:summary="Remind me to check the App."
            android:title="Notification" />
        <Preference
            android:key="Help"
            android:title="Help" />
        <Preference
            android:key="About"
            android:title="About" />
    </PreferenceCategory>
    <PreferenceCategory app:title="Authentication Settings">
        <SwitchPreference
            android:defaultValue="false"
            android:key="Fingerprint"
            android:summary="Turn fingerprint authentication on or off"
            android:title="Fingerprint Authentication" />


        <EditTextPreference
            android:defaultValue="Default value"
            android:key="Fingerprint Settings"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Fingerprint Setting" />
    </PreferenceCategory>

</PreferenceScreen>