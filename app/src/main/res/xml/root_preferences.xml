<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General">

        <SwitchPreference
            android:defaultValue="false"
            android:key="NotificationSwitch"
            android:summary="Remind me to check the App."
            android:title="Notification" />
        <Preference
            android:key="Help"
            android:title="Help" />
        <Preference
            android:key="About"
            android:title="About" />
    </PreferenceCategory>
    <PreferenceCategory app:title="Authentication Settings">
        <SwitchPreference
            android:defaultValue="false"
            android:key="FingerprintSwitch"
            android:summary="Turn fingerprint authentication on or off"
            android:title="Fingerprint Authentication" />
        <Preference
            android:key="Fingerprint Setting"
            android:title="Finngerprint Setting" />

    </PreferenceCategory>

</PreferenceScreen>